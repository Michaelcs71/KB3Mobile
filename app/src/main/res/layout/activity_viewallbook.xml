                app:layout_constraintBottom_toBottomOf="@id/homebook5"/>
            <ImageView
                android:id="@+id/homebook6"
                android:layout_width="200dp"
                android:layout_height="130dp"
                app:srcCompat="@drawable/img_16"
                app:layout_constraintTop_toBottomOf="@id/homebook5"
