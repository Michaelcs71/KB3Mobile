<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#2A1C0F"
    tools:context=".viewallbook">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#2A1C0F"
            android:clickable="false">

            <ImageView
                android:id="@+id/homebook1"
                android:layout_width="200dp"
                android:layout_height="130dp"
                app:srcCompat="@drawable/img_11"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="40dp"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="50dp"/>
            <TextView
                android:id="@+id/textbook1"
                android:layout_width="126dp"
                android:layout_height="46dp"
                android:text="Hundred Years of Hapiness"
                android:textColor="@color/white"
                android:textSize="15dp"
                android:textStyle="bold"
                app:layout_constraintStart_toEndOf="@id/homebook1"
                android:layout_marginStart="30dp"
                app:layout_constraintTop_toTopOf="@id/homebook1"/>
            <Button
                android:id="@+id/button1"
                android:layout_width="80dp"
                android:layout_height="40dp"
                android:text="Baca"
                app:layout_constraintStart_toStartOf="@id/textbook1"
                app:layout_constraintEnd_toEndOf="@id/textbook1"
                app:layout_constraintBottom_toBottomOf="@id/homebook1"/>

            <ImageView
                android:id="@+id/homebook2"
                android:layout_width="200dp"
                android:layout_height="130dp"
                app:srcCompat="@drawable/img_12"
                app:layout_constraintTop_toBottomOf="@id/homebook1"
                android:layout_marginTop="40dp"
                app:layout_constraintStart_toStartOf="@id/homebook1"/>
