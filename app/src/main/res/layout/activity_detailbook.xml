<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/detailbook"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".detailbook">

    <ImageView
        android:id="@+id/imagedetail1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/img_23"/>

    <ImageView
        android:id="@+id/coverbook"
        android:layout_width="200dp"
        android:layout_height="300dp"
        android:layout_marginTop="80dp"
        android:src="@drawable/img_24"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/judulbook"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:text="Mereka Yang Tidak Berbahagia"
        android:textColor="#000080"
        android:textSize="18dp"
        android:fontFamily="@font/kanisa_lucky"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/coverbook" />

    <TextView
        android:id="@+id/deskripsibook"
        android:layout_width="231dp"
        android:layout_height="102dp"
        android:text="Era digital saat ini sangat berpengaruh terhadap kemajuan perkembangan ekonomi. Salah satu contohnya ialah sistem e-commerce yang kini banyak digunakan oleh perusahaan startup."
        android:textColor="#000080"
        android:textSize="11dp"
        android:textAlignment="center"
        android:fontFamily="@font/caster"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/judulbook"
        android:layout_marginTop="20dp"
        app:flow_horizontalAlign="center"/>

    <Button
        android:id="@+id/baca"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Baca"/>

</androidx.constraintlayout.widget.ConstraintLayout>