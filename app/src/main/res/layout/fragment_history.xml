<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/history"
    android:background="#2A1C0F"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HistoryFragment">

    <!-- TODO: Update blank fragment layout -->
    <ImageView
        android:id="@+id/book"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@drawable/img_19"
        android:onClick="detailbook"
        android:layout_marginTop="10dp"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_goneMarginTop="50dp"/>
    <TextView
        android:id="@+id/textbook1"
        android:layout_width="126dp"
        android:layout_height="wrap_content"
        android:text="Mereka Yang Tidak Berbahagia"
        android:textColor="@color/white"
        android:textSize="15dp"
        android:textStyle="bold"
        android:textAlignment="textEnd"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="50dp"
        app:layout_constraintTop_toTopOf="@id/book"
        android:layout_marginTop="30dp"/>
    <TextView
        android:id="@+id/textbook2"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:text="05/07/2024 - 19.30 WIB"
        android:textColor="@color/white"
        android:textSize="12dp"
        android:textStyle="bold"
        android:textAlignment="textEnd"
        app:layout_constraintEnd_toEndOf="@id/textbook1"
        app:layout_constraintBottom_toBottomOf="@id/book"
        android:layout_marginBottom="30dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>