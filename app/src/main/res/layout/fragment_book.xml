                app:layout_constraintBottom_toBottomOf="@id/homebook3"/>


            <ImageView
                android:id="@+id/homebook4"
                android:layout_width="200dp"
                android:layout_height="130dp"
                app:srcCompat="@drawable/img_14"
                app:layout_constraintTop_toBottomOf="@id/homebook3"
                android:layout_marginTop="40dp"
                app:layout_constraintStart_toStartOf="@id/homebook3"/>
            <TextView
                android:id="@+id/textbook4"
                android:layout_width="126dp"
                android:layout_height="46dp"
                android:text="A Stick is an Excellent Thing"
                android:textColor="@color/white"
                android:textSize="15dp"
                android:textStyle="bold"
                app:layout_constraintStart_toEndOf="@id/homebook4"
                android:layout_marginStart="30dp"
                app:layout_constraintTop_toTopOf="@id/homebook4"/>
