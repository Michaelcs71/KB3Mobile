            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/backbook"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Back"
                android:textColor="@color/white"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="30dp"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="20dp"/>

            <ImageView
                android:id="@+id/homebook1"
                android:layout_width="200dp"
                android:layout_height="130dp"
                app:srcCompat="@drawable/img_11"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="20dp"
                app:layout_constraintTop_toBottomOf="@id/backbook"
                android:layout_marginTop="30dp"/>
            <TextView
                android:id="@+id/textbook1"
                android:layout_width="126dp"
                android:layout_height="46dp"
                android:text="Hundred Years of Hapiness"
                android:textColor="@color/white"
                android:textSize="15dp"
                android:textStyle="bold"
                app:layout_constraintStart_toEndOf="@id/homebook1"
                android:layout_marginStart="30dp"
                app:layout_constraintTop_toTopOf="@id/homebook1"/>
            <Button
                android:id="@+id/button1"
                android:layout_width="80dp"
                android:layout_height="40dp"
                android:text="Baca"
                app:layout_constraintStart_toStartOf="@id/textbook1"
                app:layout_constraintEnd_toEndOf="@id/textbook1"
                app:layout_constraintBottom_toBottomOf="@id/homebook1"/>

            <ImageView
                android:id="@+id/homebook2"
                android:layout_width="200dp"
                android:layout_height="130dp"
                app:srcCompat="@drawable/img_12"
                app:layout_constraintTop_toBottomOf="@id/homebook1"
                android:layout_marginTop="40dp"
                app:layout_constraintStart_toStartOf="@id/homebook1"/>
            <TextView
                android:id="@+id/textbook2"
                android:layout_width="126dp"
                android:layout_height="46dp"
                android:text="The Floating Field"
                android:textColor="@color/white"
                android:textSize="15dp"
                android:textStyle="bold"
                app:layout_constraintStart_toEndOf="@id/homebook2"
                android:layout_marginStart="30dp"
                app:layout_constraintTop_toTopOf="@id/homebook2"/>
            <Button
                android:id="@+id/button2"
                android:layout_width="80dp"
                android:layout_height="40dp"
                android:text="Baca"
                app:layout_constraintStart_toStartOf="@id/textbook2"
                app:layout_constraintEnd_toEndOf="@id/textbook2"
                app:layout_constraintBottom_toBottomOf="@id/homebook2"/>

            <ImageView
                android:id="@+id/homebook3"
                android:layout_width="200dp"
                android:layout_height="130dp"
                app:srcCompat="@drawable/img_13"
                app:layout_constraintTop_toBottomOf="@id/homebook2"
                android:layout_marginTop="40dp"
                app:layout_constraintStart_toStartOf="@id/homebook2"/>
            <TextView
                android:id="@+id/textbook3"
                android:layout_width="126dp"
                android:layout_height="46dp"
                android:text="Koh Panyee, Thailand, 19983"
                android:textColor="@color/white"
                android:textSize="15dp"
                android:textStyle="bold"
                app:layout_constraintStart_toEndOf="@id/homebook3"
