                android:textSize="20dp"
                app:layout_constraintTop_toBottomOf="@id/homebook7"
                android:layout_marginTop="20dp"
                app:layout_constraintStart_toStartOf="@id/homebook7"/>

            <!--lainnya-->
            <ImageView
                android:id="@+id/booklainnya1"
                android:layout_width="340dp"
                android:layout_height="220dp"
                android:src="@drawable/img_19"
                android:onClick="detailbook"
                app:layout_constraintTop_toBottomOf="@id/booklainnya"
                android:layout_marginTop="10dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>
            <TextView
                android:id="@+id/textlainnya1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mereka Yang Tak Berbahagia"
                android:textColor="@color/white"
                android:textSize="20dp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="@id/booklainnya1"
                app:layout_constraintEnd_toEndOf="@id/booklainnya1"
                app:layout_constraintTop_toBottomOf="@id/booklainnya1"/>

            <ImageView
                android:id="@+id/booklainnya2"
                android:layout_width="340dp"
                android:layout_height="220dp"
                android:src="@drawable/img_20"
